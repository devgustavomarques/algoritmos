algoritmo "FUNÇÕES"

// Primeiro exemplo de função
// fazendo soma de dois valores.
// O parentêses "Retorne (X + Y") são opcionais!.

var
   V1, V2, S: Inteiro

Funcao Soma (X, Y: inteiro) : Inteiro
Inicio
      Retorne (X + Y)
FimFuncao

inicio
      Escreva ("Digite o primeiro valor: ")
      Leia (V1)
      Escreva ("Digite o segundo valor: ")
      Leia (V2)
      
      S <- Soma(V1, V2)
      
      EscrevaL ("A soma entre", V1, " e", V2, " é igual a:", S)
fimalgoritmo