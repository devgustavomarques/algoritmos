algoritmo "CONVERSOR DE MOEDAS EM REPETIÇÃO"

// Converter reais em dólar em uma estrutura de repetição.

var
   C, Q: Inteiro
   R, D: Real
inicio
      C <- 1
      Escreva ("Quantas vezes você quer converter? ")
      Leia (Q)
      Enquanto (C <= Q) faca
               Escreva("Qual o valor em R$? ")
               Leia (R)
               D <- R/5.80
               EscrevaL ("O valor convertido é US$", D:5:2)
               C <- C + 1
      FimEnquanto
fimalgoritmo

// C = Conversão
// Q = Quantidade
// R = Reais
// D = Dólar