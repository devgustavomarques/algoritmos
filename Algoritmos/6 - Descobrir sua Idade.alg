algoritmo "IDADE"

// Algoritmo para descobrir qual é a sua idade

var
   ano_atual: Inteiro
   ano_nasc: Inteiro
   idade: inteiro
inicio
      Escreva ("Em que ano nos estamos?: ")
      Leia (ano_atual)
      Escreva ("Em que ano eu nasci?: ")
      Leia (ano_nasc)
      idade <- ano_atual - ano_nasc
      Escreva ("Então a minha idade é:", idade)
fimalgoritmo